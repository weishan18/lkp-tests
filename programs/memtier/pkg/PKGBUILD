pkgname=memtier_benchmark
pkgver=1.4.0
pkgrel=1
arch=('i386' 'x86_64' 'aarch64')
url="https://github.com/RedisLabs/memtier_benchmark"
license=('GPL2 ')
depends=()
source=("https://github.com/RedisLabs/memtier_benchmark.git#tag=$pkgver")
sha256sums=('SKIP')

build() {
	cd "${srcdir}/$pkgname"
	autoreconf -ivf
	./configure
	make
}

package() {
	mkdir -p "${pkgdir}/lkp/benchmarks/${pkgname}"
	cd "$srcdir/$pkgname"
	cp -f "$srcdir/$pkgname/memtier_benchmark" "${pkgdir}/lkp/benchmarks/${pkgname}/"
}
