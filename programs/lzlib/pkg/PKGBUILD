# Contributor: Christoph Zeiler <archNOSPAM_at_moonblade.dot.org>

pkgname=lzlib
pkgver=1.14
pkgrel=1
pkgdesc="A library providing in-memory LZMA compression and decompression functions"
arch=('i386' 'x86_64' 'aarch64')
url="http://www.nongnu.org/lzip/lzlib.html"
license=('GPL3')
depends=()
options=('!emptydirs')
source=(http://download.savannah.gnu.org/releases/lzip/$pkgname/$pkgname-$pkgver.tar.gz{,.sig}) # http://download.savannah.gnu.org/releases/lzip/lzlib/lzlib-1.14.tar.lz
sha256sums=('SKIP' 'SKIP')

build() {
  cd "${srcdir}"/$pkgname-$pkgver

  ./configure --prefix=/usr --enable-shared
  make
}

package() {
  cd "${srcdir}"/$pkgname-$pkgver

  make DESTDIR="${pkgdir}" install

  install -Dm755 minilzip "${pkgdir}"/usr/bin/minilzip
}
